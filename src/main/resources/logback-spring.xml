<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="LOG_DIR" value="./logs" />

    <!-- Consola -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread]
                sid=%X{sid} rid=%X{rid} user=%X{user} role=%X{role}
                %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- Archivo (rotaciÃ³n diaria) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/frontend.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/frontend.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>14</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} %-5level
                sid=%X{sid} rid=%X{rid} ip=%X{ip} method=%X{method} path=%X{path} status=%X{status}
                user=%X{user} role=%X{role}
                %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- Nivel root -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

    <!-- Para ver requests hacia backend -->
    <logger name="org.springframework.web.client.RestTemplate" level="DEBUG"/>

</configuration>
